@model BibliotecaP.Models.ReservaViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Información de Reserva</title>
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.4.4/qrcode.min.js"></script>
</head>
<body>
    <h1>Información de la Reserva</h1>
    <p><strong>Usuario:</strong> @Model.UsuarioNombre</p>
    <p><strong>Cubículo:</strong> @Model.CubiculoNombre</p>
    <p><strong>Hora de Entrada:</strong> @Model.HoraEntrada</p>
    <p><strong>Hora de Salida:</strong> @Model.HoraSalida</p>

    <div>
        <h3>Código QR de Acceso</h3>
        <div id="qrcodeAcceso"></div>
    </div>

    <div>
        <h3>Código QR de Salida</h3>
        <div id="qrcodeSalida"></div>
    </div>

    <script>
        var accesoData = '@Model.QRDataAcceso';
        var salidaData = '@Model.QRDataSalida';

        new QRCode(document.getElementById("qrcodeAcceso"), accesoData);
        new QRCode(document.getElementById("qrcodeSalida"), salidaData);
    </script>
</body>
</html>
